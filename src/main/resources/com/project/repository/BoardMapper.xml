<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.repository.BoardMapper">
	<sql id="cri">
		<if test="skill != null">
			<trim prefixOverrides="or" prefix="(" suffix=") and">
