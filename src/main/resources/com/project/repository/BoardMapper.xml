							<when test="type == 'Algorithm'.toString()">(BOARDSKILL LIKE '%Algorithm%')</when>
							<when test="type == 'DataStructure'.toString()">(BOARDSKILL LIKE '%DataStructure%')</when>																																	
						</choose>					
					</trim>
				</foreach>
			</trim>
		</if>
	</sql>

	<select id="boardList" resultType="BoardView">
		<![CDATA[
			SELECT BOARDNUMBER, BOARDWRITER, USERNAME, USERSNICKNAME, BOARDCATEGORY, BOARDMEMBERS, BOARDMEET, BOARDPERIOD, BOARDSKILL, BOARDSTART, BOARDCOMMUNICATION, BOARDWAY, BOARDTITLE, BOARDCONTENT, BOARDVIEW
			FROM
				(SELECT ROWNUM RN, BOARDNUMBER, BOARDWRITER, USERNAME, USERSNICKNAME, BOARDCATEGORY, BOARDMEMBERS, BOARDMEET, BOARDPERIOD, BOARDSKILL, BOARDSTART, BOARDCOMMUNICATION, BOARDWAY, BOARDTITLE, BOARDCONTENT, BOARDVIEW
				FROM USERS U INNER JOIN BOARD B ON U.USERNAME = B.BOARDWRITER WHERE
		]]>
		<include refid="cri"></include>
		<![CDATA[
				ROWNUM<=#{pageNum}*#{amount} ORDER BY BOARDNUMBER DESC)
			WHERE RN>(#{pageNum}-1)*#{amount}
		]]>
	</select>
	
	<select id="getTotal" resultType="_int">
		SELECT COUNT(*) FROM BOARD WHERE
		<include refid="cri"></include>
		BOARDNUMBER > 0
	</select>
	
	<select id="getBoard" resultType="BoardView">
		SELECT BOARDNUMBER, USERNAME, USERSNICKNAME, BOARDCATEGORY, BOARDMEMBERS, BOARDMEET, BOARDPERIOD,
		BOARDSKILL, BOARDSTART, BOARDCOMMUNICATION, BOARDWAY, BOARDTITLE, BOARDCONTENT
		FROM USERS U, BOARD B
		WHERE U.USERNAME = B.BOARDWRITER AND BOARDNUMBER= #{boardnumber}
	</select>
	
	<insert id="writeBoard">
		INSERT INTO BOARD
		(BOARDNUMBER, BOARDWRITER, BOARDDATE, BOARDCATEGORY, BOARDMEMBERS, BOARDMEET, BOARDPERIOD, BOARDSKILL, BOARDSTART, BOARDCOMMUNICATION, BOARDWAY, BOARDTITLE, BOARDCONTENT, BOARDVIEW)
		VALUES(SEQ_BOARD.NEXTVAL, #{boardwriter}, SYSDATE, #{boardcategory}, #{boardmembers}, #{boardmeet}, #{boardperiod}, #{boardskill}, #{boardstart}, #{boardcommunication}, #{boardway}, #{boardtitle}, #{boardcontent}, '0')
	</insert>
	
	<!-- 게시글 조회수 1증가 -->
	<insert id="updateViewCnt">
		UPDATE BOARD SET BOARDVIEW = BOARDVIEW+1 WHERE BOARDNUMBER=#{boardnumber}
	</insert>
	
	<!-- 게시판 상세보기 -->
	<select id="getBoardDetail" resultType="Board">
		SELECT * FROM BOARD WHERE BOARDNUMBER = #{boardnumber}
	</select>	
	
	<!-- 게시글 수정 -->
	<update id="updateBoard">
		UPDATE BOARD
		SET BOARDDATE=SYSDATE, BOARDCATEGORY=#{boardcategory}, BOARDMEMBERS=#{boardmembers}, BOARDMEET=#{boardmeet}, BOARDPERIOD=#{boardperiod},
		BOARDSKILL=#{boardskill}, BOARDSTART=#{boardstart}, BOARDCOMMUNICATION=#{boardcommunication}, BOARDWAY=#{boardway}, BOARDTITLE=#{boardtitle}, BOARDCONTENT=#{boardcontent}
		WHERE BOARDNUMBER=#{boardnumber}
	</update>	
</mapper>